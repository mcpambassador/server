<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - MCP Ambassador</title>
  <link rel="stylesheet" href="/vendor/pico.min.css">
  <link rel="stylesheet" href="/css/admin.css">
  <script src="/vendor/htmx.min.js"></script>
</head>
<body>
  <div class="admin-layout">
    <%- include('partials/nav') %>
    
    <main class="admin-content">
      <%- include('partials/flash') %>
      
      <h1>Dashboard</h1>
      
      <section class="stats-grid">
        <article>
          <header>Active Sessions</header>
          <h2><%= sessionCount %></h2>
        </article>
        
        <article>
          <header>Registered Users</header>
          <h2><%= userCount %></h2>
        </article>
        
        <article>
          <header>Profiles</header>
          <h2><%= profileCount %></h2>
        </article>
        
        <article>
          <header>Downstream MCPs</header>
          <h2><%= mcpStatus.length %></h2>
        </article>
      </section>
      
      <section>
        <h2>Downstream MCP Status</h2>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Transport</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% if (mcpStatus.length === 0) { %>
              <tr><td colspan="3">No downstream MCPs configured</td></tr>
            <% } else { %>
              <% mcpStatus.forEach(mcp => { %>
                <tr>
                  <td><%= mcp.name %></td>
                  <td><%= mcp.transport %></td>
                  <td><%= mcp.status %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </section>
      
      <section>
        <h2>Recent Audit Events</h2>
        <table>
          <thead>
            <tr>
              <th>Time</th>
              <th>Client</th>
              <th>Action</th>
              <th>Decision</th>
            </tr>
          </thead>
          <tbody>
            <% if (auditEvents.length === 0) { %>
              <tr><td colspan="4">No recent audit events</td></tr>
            <% } else { %>
              <% auditEvents.forEach(evt => { %>
                <tr>
                  <td><%= formatTimestamp(evt.timestamp) %></td>
                  <td><%= evt.client_id %></td>
                  <td><%= evt.action %></td>
                  <td><%= evt.decision %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </section>
    </main>
  </div>
</body>
</html>
