<% if (locals.totalPages && totalPages > 1) { %>
  <nav class="pagination">
    <% if (page > 1) { %>
      <a href="?page=<%= page - 1 %>">Previous</a>
    <% } %>
    
    <span>Page <%= page %> of <%= totalPages %></span>
    
    <% if (page < totalPages) { %>
      <a href="?page=<%= page + 1 %>">Next</a>
    <% } %>
  </nav>
<% } %>
