{
  "name": "@mcpambassador/server",
  "version": "0.8.0-beta.1",
  "description": "MCP Ambassador Server - HTTP/2 + TLS server with AAA pipeline, MCP routing, admin API",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcpambassador/server.git"
  },
  "homepage": "https://github.com/mcpambassador/server#readme",
  "bugs": {
    "url": "https://github.com/mcpambassador/server/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcpambassador-server": "./dist/bin/server.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/bin/server.ts",
    "start": "node dist/bin/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run tests/e2e --testTimeout=120000",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/session": "^11.1.1",
    "@fastify/static": "^8.3.0",
    "@fastify/view": "^11.1.1",
    "@mcpambassador/audit-file": "workspace:*",
    "@mcpambassador/authn-ephemeral": "workspace:*",
    "@mcpambassador/authz-local": "workspace:*",
    "@mcpambassador/contracts": "workspace:*",
    "@mcpambassador/core": "workspace:*",
    "@mcpambassador/protocol": "workspace:*",
    "argon2": "^0.44.0",
    "drizzle-orm": "^0.29.3",
    "ejs": "^4.0.1",
    "fastify": "^5.7.4",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
