{
  "name": "@mcpambassador/monorepo",
  "version": "0.8.0-beta.1",
  "private": true,
  "description": "MCP Ambassador Server - Monorepo Root",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcpambassador/server.git"
  },
  "homepage": "https://github.com/mcpambassador/server#readme",
  "bugs": {
    "url": "https://github.com/mcpambassador/server/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r --workspace-concurrency=1 build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"packages/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "db:generate": "cd packages/core && drizzle-kit generate:sqlite",
    "db:push": "cd packages/core && drizzle-kit push:sqlite",
    "db:studio": "cd packages/core && drizzle-kit studio"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.2",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^1.2.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  },
  "pnpm": {
    "overrides": {
      "hono": "^4.12.3"
    }
  }
}
