{
  "name": "@mcpambassador/monorepo",
  "version": "0.8.0-beta.1",
  "private": true,
  "description": "MCP Ambassador Server - Monorepo Root",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r --workspace-concurrency=1 build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"packages/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "db:generate": "cd packages/core && drizzle-kit generate:sqlite",
    "db:push": "cd packages/core && drizzle-kit push:sqlite",
    "db:studio": "cd packages/core && drizzle-kit studio"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  }
}
